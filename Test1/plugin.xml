<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="test1.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="test1.Perspective"
            id="Test1.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="Test1.application"
            name="Hello RCP">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="Test1.menuContribution3">
         <menu
               label="label">
            <command
                  commandId="Test1.command4"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="Test1.exitCommand"
         point="org.eclipse.ui.commands">
      <command
            id="Test1.exitCommand"
            name="name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="test1.MyView"
            id="Test1.MyView"
            name="name"
            restorable="true">
      </view>
   </extension>

</plugin>
